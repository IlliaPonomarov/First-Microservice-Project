version: '3.8'

services:

  db-loans:
    image: postgres:latest
    restart: always
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: root
      POSTGRES_DB: loans

  db-cards:
    image: postgres:latest
    restart: always
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: root
      POSTGRES_DB: cards
      
  loans-app:
    build: ./loans
    environment: [SPRING_DATASOURCE_URL=jdbc:postgresql://db-loans:5432/loans, SPRING_DATASOURCE_USERNAME=postgres, SPRING_DATASOURCE_PASSWORD=root]
    ports: ["9821:9821"]
    mem_limit: 700m
    networks: [micro-network]
    depends_on: [db-loans]

  cards-app:
    build: ./cards
    environment: [SPRING_DATASOURCE_URL=jdbc:postgresql://db-cards:5432/cards, SPRING_DATASOURCE_USERNAME=postgres, SPRING_DATASOURCE_PASSWORD=root]
    ports: ["9822:9822"]
    mem_limit: 700m
    networks: [micro-network]
    depends_on: [db-cards]
